{
  "name": "dev_portfolio",
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs --quiet",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md,yml,yaml,scss,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md,yml,yaml,scss,css}\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "test": "jest --passWithNoTests"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
